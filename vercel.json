{
  "buildCommand": "echo 'No build required - Updated for sqlite3'",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/api/seed-database",
      "destination": "/api/seed-database.js"
    },
    {
      "source": "/api/check-events",
      "destination": "/api/check-events.js"
    },
    {
      "source": "/api/test-deployment",
      "destination": "/api/test-deployment.js"
    },
    {
      "source": "/api/events/([^/]+)/checkin",
      "destination": "/api/events/[id]/checkin.js?id=$1"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/health",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    },
    "api/events/*/checkin.js": {
      "maxDuration": 30
    },
    "api/seed-database.js": {
      "maxDuration": 30
    },
    "api/check-events.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
